<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:background="#fff"
    android:layout_marginBottom="1dp"
    android:id="@+id/photoFixItem"
    android:padding="16dp">

    <TextView
        android:id="@+id/photoComment"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="Комментарий об автомобиле Комментарий об автомобиле Комментарий об автомобиле"
        android:textColor="#000"
        android:layout_marginEnd="15dp"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/photoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.11.2018"
        android:textColor="#4F7AB4"
        android:textSize="14sp" />

</LinearLayout>